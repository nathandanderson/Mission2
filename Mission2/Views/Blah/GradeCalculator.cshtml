@model GradeCalculatorModel;

<br />
<br />
<h3>Grade Calculator</h3>
<form method="post">
    <!--This is the form where information is entered for the calculator and is passed through C# to the appropriate model/location.-->
    <label>Assignments :</label>
    <input id="txtAssignments"  asp-for="Assignments" />
    <br />
    <label>Group Projects:</label>
    <input id="txtGroupProjects"  asp-for="GroupProjects" />
    <br />
    <label>Quizzes:</label>
    <input id="txtQuizzes" asp-for="Quizzes" />
    <br />
    <label>Exams:</label>
    <input id="txtExams" asp-for="Exams" />
    <br />
    <label>INTEX :</label>
    <input id="txtIntex"  asp-for="Intex" />
    <br />
    <input id="btnCalc" type="submit" value="Calculate Grade" />
    <div asp-validation-summary="All"></div>

</form>
<br />
<br />
<script src="~/js/myCupofJavaScript.js"></script>